package asistenteVirtual;

import java.text.DecimalFormat;

public class UnidadDeMasa {
	
	public final static double dracmaGramo = 1.77;
	public final static double onzaGramo = 28.35;
	public final static double libraGramo = 453.59;
	
	public final static double mgGramo = 0.001;
	public final static double kgGramo = 1000;
	
	public static String darConversion(String cadena) {
		String res="";
		
		if(cadena.contains("miligramo") && cadena.contains("gramo")) {
			int valor = Utilitarias.buscarEntero(cadena);
			int index1 = cadena.indexOf("miligramo");
			int index2= cadena.indexOf("gramo");
			DecimalFormat df = new DecimalFormat("#.##"); // doy formato por si da decimales los muestra y sino no
			String mlagr = df.format(UnidadDeMasa.miligramoAgramo(valor));
			String graml= df.format(UnidadDeMasa.gramosAmiligramo(valor));
			if(index1>index2)
				res= valor+" miligramos equivalen a "+mlagr+" gramos";//mili a gramo
			else
				res= valor+"gramos equivalen a "+graml+" miligramos";//gramo a miligramo
		}
		
		
		
		return res;
	}
	
	public static double miligramoAgramo(double masa) {
		return masa*mgGramo;
	}
	
	public static double miligramoAkilo(double masa) {
		double conv= masa*mgGramo;
		return conv/kgGramo;
	}
	
	public static double gramosAmiligramo(double masa) {
		return masa/mgGramo;
	}
	
	public static double gramosAkilo(double masa) {
		return masa/kgGramo;
	}
	
	public static double kilosAmiligramo(double masa) {
		double conv= masa*kgGramo;
		return conv/mgGramo;
	}
	
	public static double kilosAgramos(double masa) {
		return masa*kgGramo;
	}
	
	
}
