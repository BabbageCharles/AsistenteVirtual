<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
		<property name="hibernate.connection.url">jdbc:sqlite:bd.sqlite</property>
		<property name="hibernate.dialect">com.enigmabridge.hibernate.dialect.SQLiteDialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>	
		<mapping resource="baseDatos/usuario.hbm.xml" />
		<mapping resource="baseDatos/sala.hbm.xml" />		
		<mapping resource="baseDatos/meme.hbm.xml" />
		<mapping resource="baseDatos/deuda.hbm.xml" />
		<mapping resource="baseDatos/evento.hbm.xml" />
		<mapping resource="baseDatos/rss.hbm.xml" />
		<mapping resource="baseDatos/salaP.hbm.xml" />
	</session-factory>
</hibernate-configuration>